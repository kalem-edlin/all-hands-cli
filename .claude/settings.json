{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "PARALLEL_MAX_WORKERS": "3",
    "PROJECT_NAME": "test-target",
    "SEARCH_SIMILARITY_THRESHOLD": "0.64",
    "SEARCH_FULL_CONTEXT_SIMILARITY_THRESHOLD": "0.72",
    "SEARCH_CONTEXT_TOKEN_LIMIT": "5000",
    "MAX_LOGS_TOKENS": "10000",
    "BASH_MAX_TIMEOUT_MS": "3600000",
    "BASE_BRANCH": "main"
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/startup.sh"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "(WebFetch|Bash)",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/scripts/github_url_to_gh.py"
          }
        ]
      },
      {
        "matcher": "WebFetch",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/scripts/enforce_research_fetch.py"
          }
        ]
      },
      {
        "matcher": "WebSearch",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/scripts/enforce_research_search.py"
          }
        ]
      }
    ]
  },
  "enableAllProjectMcpServers": false,
  "permissions": {
    "allow": [
      "Grep",
      "Bash(git:*)",
      "Bash(gh:*)",
      "Bash(cat:*)",
      "Bash(ls:*)",
      "Bash(rg:*)",
      "Bash(mkdir:*)",
      "Bash(npx repomix@latest:*)",
      "Read(~/.claude-code-docs/docs/*)",
      "Bash(.claude/envoy/envoy:*)",
      "SlashCommand(/parallel-discovery:*)",
      "SlashCommand(/plan:*)",
      "SlashCommand(/plan-checkpoint:*)",
      "SlashCommand(/parallel-orchestration:*)"
    ],
    "deny": [],
    "ask": []
  },
  "statusLine": {
    "type": "command",
    "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/statusline.sh",
    "padding": 0
  }
}